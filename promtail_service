promtail:
        image: grafana/promtail:3.6.4
        container_name: promtail
        volumes:
          - ./promtail/promtail.yml:/etc/promtail/config.yml:ro
#	  - /tail the.log files here
          - /tmp:/tmp
        command: -config.file=/etc/promtail/config.yml
        restart: unless-stopped
        networks:
          - monitoring_network
